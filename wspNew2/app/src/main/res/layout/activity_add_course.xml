<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddCourseActivity">
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/courseTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        app:layout_constraintEnd_toStartOf="@+id/courseID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:layout_marginTop="25dp"/>
    <EditText
        android:id="@+id/courseID"
        android:hint="ID"
        app:layout_constraintStart_toEndOf="@id/courseTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>
    <EditText
        android:id="@+id/courseFaculty"
        android:hint="Faculty"
        app:layout_constraintStart_toEndOf="@id/courseTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>
    <EditText
        android:id="@+id/courseCredits"
        android:hint="Credits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/courseID"
        app:layout_constraintTop_toBottomOf="@id/courseTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/addCourse"
        android:text="Add course"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>